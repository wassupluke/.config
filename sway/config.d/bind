# /* vim: set filetype=conf : */
#
# Variables
#
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Pref. Terminal
set $term alacritty

# Pref. Browser
set $browser firefox

# Application Launcher
set $menu rofi -show run | xargs swaymsg exec -- 


# Drag floating windows by holding down $mod and left mouse button.
# Resize them with right mouse button + $mod.
# Despite the name, also works for non-floating windows.
# Change normal to inverse to use left mouse button for resizing and right
# mouse button for dragging.
floating_modifier $mod normal

bindsym {
    # start a terminal
    $mod+Return exec $term

    # start a browser
    $mod+b exec $browser

    #kill focused window
    $mod+Shift+q kill

    # start your launcher
    $mod+d exec $menu
    $mod+a exec $menu

     # Make the current window Sticky
    $mod+Shift+s sticky toggle

    # reload sway
    $mod+Shift+r reload

    # Alt + Tab
    mod1+Tab workspace back_and_forth

#
# Moving around:
#
    # Move your focus around
    $mod+$left focus left
    $mod+$down focus down
    $mod+$up focus up
    $mod+$right focus right
    # or use $mod+[up|down|left|right]
    $mod+Left focus left
    $mod+Down focus down
    $mod+Up focus up
    $mod+Right focus right

    # _move_ the focused window with the same, but add Shift
    $mod+Shift+$left move left
    $mod+Shift+$down move down
    $mod+Shift+$up move up
    $mod+Shift+$right move right
    # ditto, with arrow keys
    $mod+Shift+Left move left
    $mod+Shift+Down move down
    $mod+Shift+Up move up
    $mod+Shift+Right move right
#
# Workspaces:
#
    $mod+Tab workspace next
    $mod+Shift+Tab workspace prev
    # switch to workspace
    $mod+1 workspace 1
    $mod+2 workspace 2
    $mod+3 workspace 3
    $mod+4 workspace 4
    $mod+5 workspace 5
    $mod+6 workspace 6
    $mod+7 workspace 7
    $mod+8 workspace 8
    $mod+9 workspace 9
    $mod+0 workspace 10
    # move focused container to workspace
    $mod+Shift+1 move container to workspace 1
    $mod+Shift+2 move container to workspace 2
    $mod+Shift+3 move container to workspace 3
    $mod+Shift+4 move container to workspace 4
    $mod+Shift+5 move container to workspace 5
    $mod+Shift+6 move container to workspace 6
    $mod+Shift+7 move container to workspace 7
    $mod+Shift+8 move container to workspace 8
    $mod+Shift+9 move container to workspace 9
    $mod+Shift+0 move container to workspace 10
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.
 #

#
# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    # $mod+b splith
    # $mod+v splitv

    # Switch the current container between different layout styles
    # $mod+shift+w layout stacking
    # $mod+w layout tabbed

    # $mod+e layout toggle split

    # Make the current focus fullscreen
    $mod+f fullscreen

   # Toggle the current focus between tiling and floating mode
    $mod+Shift+space floating toggle

    # Swap focus between the tiling area and the floating area
    $mod+space focus mode_toggle

    # move focus to the parent container
    # $mod+a focus parent
#
# Scratchpad:
#
    # Sway has a "scratchpad", which is a bag of holding for windows.
    # You can send windows there and get them back later.

    # Move the currently focused window to the scratchpad
    $mod+Shift+t move scratchpad

    # Show the next scratchpad window or hide the focused scratchpad window.
    # If there are multiple scratchpad windows, this command cycles through them.
    $mod+t scratchpad show
}

# Application - Workspace Assignments
assign [app_id=$browser] workspace 2
assign [class="Spotify"] workspace 10

#
# Resize Mode
#
set $px 40px
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width $px
    bindsym $down resize grow height $px
    bindsym $up resize shrink height $px
    bindsym $right resize grow width $px

    # ditto, with arrow keys
    bindsym Left resize shrink width $px
    bindsym Down resize grow height $px
    bindsym Up resize shrink height $px
    bindsym Right resize grow width $px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"


#
# Volume control
# https://wiki.archlinux.org/title/WirePlumber#Keyboard_volume_control

# Key Bindings
bindsym --locked {
    XF86AudioRaiseVolume exec amixer set Master unmute && amixer set Master 2+; pkill -x RTMIN+11 waybar
    XF86AudioLowerVolume exec amixer set Master 2-; pkill -x RTMIN+11 waybar
    XF86AudioMute        exec amixer set Master toggle; pkill -x RTMIN+11 waybar
    XF86AudioPlay        exec playerctl play-pause
    XF86AudioPause       exec playerctl play-pause
    XF86AudioNext        exec playerctl next
    XF86AudioPrev        exec playerctl previous

}

# Lock to black
set $lock       swaylock

# Lock to black, stop sending output to monitor.
set $locksoff   swayidle -w  \
                timeout 1 '$lock' \
                timeout 2 'swaymsg "output * dpms off"' \
                resume 'swaymsg "output * dpms on"; pkill -nx swayidle'
 
 # Lock computer
 bindsym $mod+Escape exec $lock

# System Menu, Shutdown etc
bindsym $mod+x exec nwg-bar -p center -a middle -i 48
# Screenshot
bindsym $mod+n exec grimshot copy area && notify-send "Screenshot copied to Clipboard"
# Emoji
bindsym $mod+i exec rofimoji
# Clipboard Manager
bindsym $mod+g exec copyq show

## Password Manager
# First list all kdbx files in ~/Sync/Pass/
# Then open the Database using kpmenu
bindsym $mod+p exec kpmenu --database $(find ~/Sync/Pass/ -name "*.kdbx" | rofi -dmenu -p Database) --clipboardTool wl-clipboard --menu rofi
